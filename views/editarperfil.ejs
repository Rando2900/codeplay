<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="stylesheets/editarperfil.css">
    <title>Editar Perfil - Code-Play</title>
</head>
<body>
  <!-- Contenido principal de la p√°gina -->
  <%- include('partials/header') %>

  <main class="profile-edit-container">
    <h1>Editar Perfil</h1>
    <form id="edit-profile-form" action="/api/users/updateProfile" method="POST">
        <div class="form-section">
            <label for="usuario">Usuario</label>
            <input type="text" id="usuario" name="usuario" placeholder="Ingresa tu nuevo usuario" required>
        </div>
        <div class="form-section">
            <label for="contrase√±a">Contrase√±a</label>
            <input type="password" id="contrase√±a" name="contrase√±a" placeholder="Ingresa tu nueva contrase√±a" required>
        </div>
        <div class="form-buttons">
            <button type="submit">Guardar Cambios</button>
            <button type="button" onclick="window.location.href='perfil.html'">Cancelar</button>
        </div>
    </form>        
</main>


<%- include('partials/footer') %>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        fetch('/users/session', { method: 'GET', credentials: 'same-origin' })
            .then(response => response.json())
            .then(data => {
                if (!data.loggedIn) {
                    window.location.href = '/login'; // üî• Redirigir a la ruta correcta del login
                }
            })
            .catch(err => console.error('‚ùå Error verificando la sesi√≥n:', err));
    });

    document.getElementById('edit-profile-form').addEventListener('submit', async (event) => {
        event.preventDefault(); // üî• Evita el env√≠o tradicional del formulario

        const formData = new FormData(event.target);
        const data = Object.fromEntries(formData.entries());

        try {
            const response = await fetch('/api/users/updateProfile', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            const result = await response.json();

            if (response.ok) {
                alert('‚úÖ Perfil actualizado correctamente. Se cerrar√° la sesi√≥n.');
                
                // üî• Esperar 1 segundo antes de redirigir
                setTimeout(() => {
                    window.location.href = result.redirect;
                }, 1000);
                
            } else {
                alert('‚ùå Error al actualizar el perfil: ' + (result.message || 'Int√©ntalo nuevamente.'));
            }
        } catch (error) {
            alert('‚ùå Error en la solicitud: ' + error.message);
        }
    });
</script>

</body>
</html>
