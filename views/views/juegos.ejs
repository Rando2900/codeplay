<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Games - Code-Play</title>
  <link rel="stylesheet" href="stylesheets/comunidad.css">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link rel="shortcut icon" href="/logo.ico" type="image/x-icon">
  <style>
    /* Additional style for the gallery */
    #gameContainer {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      margin: 20px;
      padding: 20px;
    }
    .game-card {
      border: 1px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      background: #fff;
      transition: transform 0.2s;
    }
    .game-card:hover {
      transform: scale(1.05);
    }
    .game-card img {
      width: 100%;
      height: 150px;
      object-fit: cover;
    }
    .game-card .card-content {
      padding: 15px;
    }
    .game-card h3 {
      font-size: 1.2em;
      margin: 0;
      color: #333;
    }
    .game-card p {
      font-size: 0.9em;
      color: #666;
      margin: 10px 0;
    }
    .game-card button {
      display: inline-block;
      margin-top: 10px;
      padding: 10px 15px;
      border: none;
      border-radius: 5px;
      background: #007BFF;
      color: white;
      font-size: 0.9em;
      cursor: pointer;
      transition: background 0.3s;
    }
    .game-card button:hover {
      background: #0056b3;
    }
  </style>
</head>
<body>
<!-- Main content of the page -->
<%- include('partials/header') %>

  <div style="text-align: center;">
    <h2>Popular Games</h2>
  </div>
  <div id="gameContainer"></div>

  <script>
async function loadGames() {
    const gameContainer = document.getElementById('gameContainer');

    try {
        const response = await fetch('/api/juegos');
        const games = await response.json();

        console.log("üìå Data received:", games); // üîπ View received data

        if (!Array.isArray(games) || games.length === 0) {
            gameContainer.innerHTML = '<p>No games available.</p>';
            return;
        }

        gameContainer.innerHTML = '';
        games.sort((a, b) => b.likes - a.likes);

        games.forEach(game => {
            console.log("üîπ Processing game:", game); // üîπ Log each game in console

            const card = document.createElement('div');
            card.classList.add('game-card');

            const iframe = document.createElement('iframe');
            iframe.style.width = "100%";
            iframe.style.height = "200px";
            iframe.style.border = "1px solid #ddd";
            iframe.srcdoc = `
                <!DOCTYPE html>
                <html lang='en'>
                <head><style>${game.css || ''}</style></head>
                <body>
                    ${game.html || ''}
                    <script>
                        window.alert = function() {}; 
                        window.confirm = function() { return false; }; 
                        window.prompt = function() { return null; }; 
                        ${game.javascript || ''}
                    <\\/script>
                </body>
                </html>
            `;

            const titleElement = document.createElement('h3');
            titleElement.textContent = game.nombre || 'Untitled Game';

            const descriptionElement = document.createElement('p');
            descriptionElement.textContent = game.descripcion || 'No description available';
            descriptionElement.classList.add('game-description');

            const playButton = document.createElement('button');
            playButton.textContent = 'Play';
            playButton.onclick = () => window.location.href = `/juego?id=${game._id}`;

            card.appendChild(titleElement);
            card.appendChild(descriptionElement);
            card.appendChild(iframe);
            card.appendChild(playButton);
            gameContainer.appendChild(card);
        });

    } catch (error) {
        console.error('‚ùå Error loading games:', error);
        gameContainer.innerHTML = '<p>Error loading games.</p>';
    }
}

loadGames();

  </script>
  <%- include('partials/footer') %>
</body>
</html>
