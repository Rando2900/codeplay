<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="stylesheets/perfil_usuario.css">
    <title>Perfil del Usuario - Code-Play</title>
    <style>
        .profile-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            margin-top: 20px;
        }
        .user-name {
            font-size: 20px;
            font-weight: bold;
            color: #333;
        }
        .likes-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 10px;
            font-size: 18px;
            color: #555;
        }
        .heart-icon {
            font-size: 40px;
            color: red;
            margin-top: 5px;
        }
        .likes-count {
            font-size: 22px;
            font-weight: bold;
            color: #333;
        }
        /* üìå Dise√±o en grid: 3 columnas con espacio */
        .project-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            justify-content: center;
            width: 90%;
            max-width: 1200px;
            margin-top: 20px;
        }
        .project-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 10px;
            background: white;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .project-card h2 {
            font-size: 18px;
            margin: 10px 0;
            color: #333;
        }
        iframe {
            width: 100%;
            height: 200px;
            border: none;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    
    <main class="profile-container">
        <h1>Perfil de Usuario</h1>
        <p id="user-name" class="user-name">Cargando usuario...</p>

        <!-- üìå Contador de Likes -->
        <div class="likes-container">
            <p>Likes</p>
            <div class="heart-icon">‚ù§Ô∏è</div>
            <p id="likes-count" class="likes-count">0</p>
        </div>

        <section class="projects-section">
            <h2>Proyectos de este usuario</h2>
            <div class="project-grid" id="projects-container">
                <p>Cargando proyectos...</p>
            </div>
        </section>
    </main>
    <br>
    <br>
    <br>
    
    <%- include('partials/footer') %>
    
    
    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            const params = new URLSearchParams(window.location.search);
            const userId = params.get('id');

            if (!userId) {
                document.getElementById('projects-container').innerHTML = '<p>Error: Usuario no encontrado.</p>';
                return;
            }

            try {
                // Obtener usuario
                const userResponse = await fetch(`/api/users/${userId}`);
                if (!userResponse.ok) throw new Error(`Usuario no encontrado: ${userResponse.status}`);
                const userData = await userResponse.json();
                document.getElementById('user-name').textContent = userData.usuario || 'Usuario Desconocido';
                
                // Obtener proyectos del usuario
                const projectsResponse = await fetch(`/api/projects/user/${userId}`);
                if (!projectsResponse.ok) throw new Error('Error al obtener proyectos');
                const projects = await projectsResponse.json();
                
                renderProjects(projects);
                calculateTotalLikes(projects); // ‚úÖ Calcular y mostrar total de likes
            } catch (error) {
                console.error('Error al cargar los datos:', error);
                document.getElementById('user-name').textContent = 'Error al cargar usuario';
            }
        });

        function renderProjects(projects) {
            const container = document.getElementById('projects-container');
            container.innerHTML = '';

            if (projects.length === 0) {
                container.innerHTML = '<p>Este usuario no tiene proyectos.</p>';
                return;
            }

            projects.forEach(project => {
                const card = document.createElement('div');
                card.classList.add('project-card');

                const iframe = document.createElement('iframe');
                iframe.srcdoc = `
                    <!DOCTYPE html>
                    <html lang="es">
                    <head>
                        <style>${project.css}</style>
                    </head>
                    <body>
                        ${project.html}
                        <script> ${project.js.replace(/<\/script>/g, "<\\/script>")} <\/script>
                    </body>
                    </html>
                `;
                iframe.width = "100%";
                iframe.height = "200px";

                const titleElement = document.createElement('h2');
                titleElement.textContent = project.title || 'Proyecto Sin T√≠tulo';

                card.appendChild(iframe);
                card.appendChild(titleElement);
                container.appendChild(card);
            });
        }

        function calculateTotalLikes(projects) {
            const totalLikes = projects.reduce((sum, project) => sum + (project.likes || 0), 0);
            document.getElementById('likes-count').textContent = totalLikes;
        }
    </script>
</body>
</html>
