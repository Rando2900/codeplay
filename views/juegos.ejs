<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Juegos - Code-Play</title>
  <link rel="stylesheet" href="stylesheets/comunidad.css">
  <style>
    /* Estilo adicional para la galerÃ­a */
    #gameContainer {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
      margin: 20px;
      padding: 20px;
    }
    .game-card {
      border: 1px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      background: #fff;
      transition: transform 0.2s;
    }
    .game-card:hover {
      transform: scale(1.05);
    }
    .game-card img {
      width: 100%;
      height: 150px;
      object-fit: cover;
    }
    .game-card .card-content {
      padding: 15px;
    }
    .game-card h3 {
      font-size: 1.2em;
      margin: 0;
      color: #333;
    }
    .game-card p {
      font-size: 0.9em;
      color: #666;
      margin: 10px 0;
    }
    .game-card button {
      display: inline-block;
      margin-top: 10px;
      padding: 10px 15px;
      border: none;
      border-radius: 5px;
      background: #007BFF;
      color: white;
      font-size: 0.9em;
      cursor: pointer;
      transition: background 0.3s;
    }
    .game-card button:hover {
      background: #0056b3;
    }
  </style>
</head>
<body>
<!-- Contenido principal de la pÃ¡gina -->
<%- include('partials/header') %>


  <div style="text-align: center;">
    <h2>Juegos Populares</h2>
  </div>
  <div id="gameContainer"></div>

  <script>
async function cargarJuegos() {
    const gameContainer = document.getElementById('gameContainer');

    try {
        const response = await fetch('/api/juegos');
        const juegos = await response.json();

        gameContainer.innerHTML = '';
        juegos.sort((a, b) => b.likes - a.likes);

        juegos.forEach(juego => {
            const card = document.createElement('div');
            card.classList.add('game-card');

            const iframe = document.createElement('iframe');
            iframe.srcdoc = `
                <!DOCTYPE html>
                <html lang='es'>
                <head><style>${juego.css}</style></head>
                <body>
                    ${juego.html}
                    <script>
                        window.alert = function() {}; // ðŸ”¹ Bloquea alert()
                        window.confirm = function() { return false; }; // ðŸ”¹ Bloquea confirm()
                        window.prompt = function() { return null; }; // ðŸ”¹ Bloquea prompt()
                        ${juego.javascript}
                    <\\/script>
                </body>
                </html>
            `;

            const titleElement = document.createElement('h3');
            titleElement.textContent = juego.nombre;

            const playButton = document.createElement('button');
            playButton.textContent = 'Jugar';
            playButton.onclick = () => window.location.href = `/juego?id=${juego._id}`;

            card.appendChild(titleElement);
            card.appendChild(iframe);
            card.appendChild(playButton);
            gameContainer.appendChild(card);
        });
    } catch (error) {
        console.error('Error al cargar los juegos:', error);
        gameContainer.innerHTML = '<p>Error al cargar los juegos.</p>';
    }
}

    cargarJuegos();
  </script>
  <%- include('partials/footer') %>
</body>
</html>
